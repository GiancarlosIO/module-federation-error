{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "*": ["./@mf-types/*"],
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "src",
    "shared",
    "config",
    "modern.config.ts",
    "module-federation.config.ts"
  ],
  "exclude": ["**/node_modules"]
}
